<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="@color/black"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share"
            android:layout_marginEnd="16dp"
            app:tint="@color/black"/>

        <ImageView
            android:id="@+id/btnDownload"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_download"
            app:tint="@color/black"/>

    </LinearLayout>

    <!-- Report Card with Border -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardReportContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/medicam_primary"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/btnSyncABHA"
        app:layout_constraintHeight_percent="0.75">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivReportDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Sync with ABHA Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSyncABHA"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Sync With Abha"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_margin="16dp"
        app:icon="@drawable/ic_sync"
        app:iconTint="@color/white"
        app:iconGravity="end"
        app:backgroundTint="@color/medicam_primary"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
