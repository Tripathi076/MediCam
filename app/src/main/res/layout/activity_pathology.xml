<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pathology Reports"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Category Tabs -->
    <HorizontalScrollView
        android:id="@+id/tabsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTabAll"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="All"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="20dp"
                app:backgroundTint="@color/medicam_primary"
                android:textColor="@color/white"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.ElevatedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTabBlood"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Blood Tests"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="20dp"
                app:backgroundTint="#EFEFEF"
                android:textColor="#333333"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.ElevatedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTabGenetic"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="20dp"
                android:paddingHorizontal="16dp"
                android:text="Genetic Tests"
                android:textColor="#333333"
                android:textSize="12sp"
                app:backgroundTint="#EFEFEF"
                app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTabBiopsy"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Biopsy"
                android:layout_marginEnd="20dp"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                app:backgroundTint="#EFEFEF"
                android:textColor="#333333"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.ElevatedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTabUltraSound"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="UltraSound"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                app:backgroundTint="#EFEFEF"
                android:textColor="#333333"
                app:cornerRadius="16dp"
                style="@style/Widget.Material3.Button.ElevatedButton"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tabsScrollView"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/pyupload"
            android:contentDescription="Empty state illustration"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Report Uploaded Yet."
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Please Upload A Report Using The Upload Report Button."
            android:textAlignment="center"
            android:textColor="@color/medicam_text_gray"
            android:textSize="13sp" />

    </LinearLayout>

    <!-- Reports List (Initially Hidden) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reportsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tabsScrollView"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        app:backgroundTint="@color/medicam_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"/>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                app:tint="#BDBDBD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#BDBDBD"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Pathology -->
        <LinearLayout
            android:id="@+id/navPathology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_nav_item_selected">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_flask"
                app:tint="@color/medicam_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pathology"
                android:textColor="@color/medicam_primary"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- ABHA -->
        <LinearLayout
            android:id="@+id/navABHA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_id_card"
                app:tint="#BDBDBD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABHA"
                android:textColor="#BDBDBD"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- BMI -->
        <LinearLayout
            android:id="@+id/navBMI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                app:tint="#BDBDBD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:textColor="#BDBDBD"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Devices -->
        <LinearLayout
            android:id="@+id/navDevices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_smart_watch"
                app:tint="#BDBDBD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Devices"
                android:textColor="#BDBDBD"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
